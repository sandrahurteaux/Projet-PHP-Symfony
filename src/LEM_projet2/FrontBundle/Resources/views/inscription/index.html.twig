{% extends "FrontBundle::base.html.twig" %}

{% block title %}
Inscription
{% endblock %}

{% block nav %}
    {% for cat in categories %}
           <li><a href="{{ path('category',{'id': cat.id}) }}">{{ cat.name }}</a></li>
   {% endfor %}
{% endblock %}
                                                
{% block body %}
<main class="home">
    <div class="container">
        
    <h1>Cr√©ation de votre compte</h1> 
        <div class="row">

            <div class="col-md-6 col-md-offset-3">
                
                <form method="post" novalidate class="form-horizontal" role="form">
                    {{ form_widget(formulaire._token) }}

                    <div class="form-group">
                        {{ form_label(formulaire.civility) }}
                        {{ form_widget(formulaire.civility, {'attr' : { 'class' : 'form-control' }} )}}
                    </div>  
                    <div class="form-group">
                        {{ form_label(formulaire.firstName, 'Votre nom') }}
                        {{ form_widget(formulaire.firstName, {'attr' : { 'class' : 'form-control' }}) }}
                        {{ form_errors(formulaire.firstName) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(formulaire.lastName, 'Votre nom') }}
                        {{ form_widget(formulaire.lastName, {'attr' : { 'class' : 'form-control' }}) }}
                        {{ form_errors(formulaire.lastName) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(formulaire.email, 'Votre mail') }}
                        {{ form_widget(formulaire.email,
                                        {'attr' : {
                                                'placeholder' : 'votre.mail@adresse.ad',
                                                'class' : 'form-control'
                                        }}
                        ) }}
                        {{ form_errors(formulaire.email) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(formulaire.password, 'Votre mot de passe') }}
                        {{ form_widget(formulaire.password, {'attr' : { 'class' : 'form-control' }}) }}
                        {{ form_errors(formulaire.password) }}
                    </div>
                    <div class="form-group"><input type="submit" value="Envoyer" class="btn btn-primary" /></div>
                </form>
                
            </div><!-- end .col-md-10 -->
        </div> <!-- end .row -->
    </div><!-- end .container -->
</main>
{% endblock %}

