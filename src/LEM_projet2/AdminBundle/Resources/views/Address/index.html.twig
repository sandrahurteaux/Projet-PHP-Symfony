{% extends "AdminBundle::base.html.twig" %}

{% block body %}
<main class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Address list</h1>

            <table class="records_list table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Address1</th>
                        <th>Address2</th>
                        <th>Postalcode</th>
                        <th>Town</th>
                        <th>Billing</th>
                        <th>Phone1</th>
                        <th>Phone2</th>
                        <th>Comment</th>
                        <th>Isactive</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('address_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.address1 }}</td>
                        <td>{{ entity.address2 }}</td>
                        <td>{{ entity.postalcode }}</td>
                        <td>{{ entity.town }}</td>
                        <td>{{ entity.billing }}</td>
                        <td>{{ entity.phone1 }}</td>
                        <td>{{ entity.phone2 }}</td>
                        <td>{{ entity.comment }}</td>
                        <td>{{ entity.isactive }}</td>
                        <td>
                        <ul class="no-list">
                            <li>
                                <a href="{{ path('address_show', { 'id': entity.id }) }}" class="btn btn-xs btn-default">show</a>
                            </li>
                            <li>
                                <a href="{{ path('address_edit', { 'id': entity.id }) }}" class="btn btn-xs btn-default">edit</a>
                            </li>
                        </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <ul class="no-list">
                <li>
                    <a href="{{ path('address_new') }}" class="btn btn-xs btn-primary">
                        Nouvelle entr√©e
                    </a>
                </li>
            </ul>
        </div><!-- end .col-md-12 -->
    </div><!-- end .row -->
</main>
{% endblock %}
