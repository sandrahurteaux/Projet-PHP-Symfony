{% extends "AdminBundle::base.html.twig" %}

{% block body %}
<main class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Toutes les catégories</h1>

            <table class="records_list table table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('admin_category_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.name }}</td>
                        <td>{{ entity.description }}</td>
                        <td>
                        <ul class="no-list">
                            <li>
                                <a href="{{ path('admin_category_show', { 'id': entity.id }) }}" class="btn btn-default btn-xs">show</a>
                            </li>
                            <li>
                                <a href="{{ path('admin_category_edit', { 'id': entity.id }) }}" class="btn btn-default btn-xs">edit</a>
                            </li>
                        </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <ul class="no-list">
                <li>
                    <a href="{{ path('admin_category_new') }}" class="btn btn-primary">
                       Créer une nouvelle entrée
                    </a>
                </li>
            </ul>
        </div><!-- end .col-md-12 -->
    </div><!-- end .row -->
</main>
{% endblock %}
