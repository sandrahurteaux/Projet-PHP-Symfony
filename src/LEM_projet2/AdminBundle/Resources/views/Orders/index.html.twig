{% extends "AdminBundle::base.html.twig" %}

{% block body %}
<main class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Liste des commandes</h1>

            <table class="records_list table table-striped"">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Reference</th>
                        <th>Date</th>
                        <th>Montant total</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('admin_orders_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.reference }}</td>
                        <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{{ entity.sum }}</td>
                        <td>
                        <ul>
                            <li>
                                <a href="{{ path('admin_orders_show', { 'id': entity.id }) }}">voir</a>
                            </li>
                            <li>
                                <a href="{{ path('admin_orders_edit', { 'id': entity.id }) }}">éditer</a>
                            </li>
                        </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

                <ul class="no-list">
                <li>
                    <a href="{{ path('admin_orders_new') }}" class="btn btn-primary">
                        Créer une nouvelle entrée
                    </a>
                </li>
            </ul>
        </div><!-- end .col-md-12 -->
    </div><!-- end .row -->
</main>
{% endblock %}
